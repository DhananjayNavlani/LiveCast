rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - authenticated users can read all, only owner can write
    // User document contains nested 'device' object with device info
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Calls collection - WebRTC signaling (authenticated users only)
    match /calls/{callId} {
      allow read, write: if request.auth != null;

      // ICE candidates subcollections
      match /offerCandidates/{candidateId} {
        allow read, write: if request.auth != null;
      }

      match /answerCandidates/{candidateId} {
        allow read, write: if request.auth != null;
      }
    }

    // Rooms collection - online tracking (authenticated users only)
    match /rooms/{roomId} {
      allow read, write: if request.auth != null;
    }

    // Config collection - read only for authenticated users
    match /config/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via Firebase Console
    }
  }
}
